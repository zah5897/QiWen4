<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_inner_height"
    android:background="@color/white">

    <ImageView
        android:id="@+id/title_bar_left_btn"
        android:layout_width="45dp"
        android:layout_height="@dimen/title_bar_inner_height"
        android:background="@drawable/view_default_selecotr"
        android:padding="5dp"
        android:src="@mipmap/leftbackicon_titlebar" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_inner_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/title_bar_txt_margin_left"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="@string/title_txt_detail"
        android:textColor="@color/colorTitle"
        android:textSize="@dimen/title_size" />

    <ImageView
        android:id="@+id/action_favor"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dp_5"
        android:scaleType="center"
        android:src="@drawable/ic_action_love" />

    <ImageView
        android:id="@+id/action_repost"
        style="@style/toolbar_action"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_action_repost" />
</LinearLayout>

