<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="45.0dip"
    android:layout_alignParentBottom="true"
    android:background="@drawable/comment_tool_bar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip">

    <EditText
        android:id="@+id/write_comment_layout"
        style="@style/toolbar_action"
        android:layout_height="38.0dip"
        android:layout_gravity="center"
        android:layout_marginRight="20.0dip"
        android:layout_weight="1"
        android:background="@drawable/bg_detail_comment_btn"
        android:drawablePadding="6.0dip"
        android:gravity="center|left"
        android:hint="写评论…"
        android:paddingLeft="12.0dip"
        android:textColor="@color/detail_action_write_comment_text"
        android:textSize="14.0sp" />

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content" android:text="@string/send"
        android:enabled="false"
        android:layout_height="wrap_content" />
</LinearLayout>